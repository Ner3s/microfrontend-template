    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "babel-jest": "^27.4.6",
    "babel-loader": "^8.2.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "css-loader": "^6.6.0",
